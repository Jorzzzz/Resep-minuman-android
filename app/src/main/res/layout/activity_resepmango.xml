<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resepmango">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="246dp"
            android:layout_height="35dp"
            android:background="@drawable/judulmango"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"/>

        <ImageView
            android:layout_width="187dp"
            android:layout_height="177dp"
            android:background="@drawable/fotomango"
            android:layout_marginStart="120dp"
            android:layout_marginTop="40dp"/>

        <TextView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:text="Bahan-bahan:\n\n1. Mangga madu ukuran sedang 3 buah\n2. Susu ultra 300 mili liter (bisa di mix dengan yoghurt plain)\n3. Es batu 2 cetakan\n4. Madu 1 sendok makan\n5. Whipped cream secukupnya\n6. Untuk slushie bisa gunakan 1 buah mangga yang di serut lalu bekukan di freezer (bisa bikin minimal 4 jam atau sehari sebelum membuat mango thai).
     Topping :
     Potongan daging buah mangga secukupnya\n
"/>

        <TextView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:text="Cara membuat:\n\n1. Blender semua bahan smoothie seperti mangga, susu, es batu dan madu sampai halus/lembut.\n2. tuang smoothie mangga ke dalam gelas saji. Kira-kira setengah gelas agak tinggi sedikit, intinya jangan di habiskan karena nanti untuk lapisan atasnya.\n3. Masukkan whipped cream secukupnya, kemudian di susul serutan mangga beku atau ice cream mangga yang di hancurkan.\n4. masukkan sisa smoothie mangga tadi.\n5. beri potongan buah mangga di atasnya\n
"/>

        <TextView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:text="untuk lebih jelasnya kunjungi link YouTobe di bawah ini"/>

        <TextView
            android:id="@+id/btn"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="14dp"
            android:textColor="#0099CC"
            android:text="https://www.youtube.com/watch?vknndJByvad"/>

        <ImageButton
            android:id="@+id/back"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:background="@drawable/back"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="20dp"/>
    </LinearLayout>

</ScrollView>