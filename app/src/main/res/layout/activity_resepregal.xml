<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resepregal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:layout_width="246dp"
        android:layout_height="35dp"
        android:background="@drawable/judulregal"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"/>

    <ImageView
        android:layout_width="187dp"
        android:layout_height="177dp"
        android:background="@drawable/fotoregal"
        android:layout_marginStart="120dp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:text="Bahan-bahan:\n\n1. 200 ml UHT\n2. 4 pcs biskuit Regal (2 untuk topping dan 4 dicampur langsung)\n3. 2 sdm susu kental manis\n4. 1 sdm madu atau sirop jagung (opsional)\n5. Es batu secukupnya"/>

    <TextView
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:text="Cara membuat:\n\n1. Siapkan gelas saji, lalu masukkan susu kental manis dan susu UHT. Aduk-aduk hingga merata.\n2. Tuangkan biskuit Regal ke dalam minuman. Tambahkan es batu di atasnya, lalu masukkan susu, dan madu.\n3. Tambahkan biskuit Regal sebagai topping.\n4. Es susu Regal siap dinikmati!
"/>

        <TextView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:text="untuk lebih jelasnya kunjungi link YouTobe di bawah ini"/>

        <TextView
            android:id="@+id/btn"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="14dp"
            android:textColor="#0099CC"
            android:text="https://www.youtube.com/watch?v=JKSAJNsbd"/>

        <ImageButton
            android:id="@+id/back"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:background="@drawable/back"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="20dp"/>
    </LinearLayout>

</ScrollView>